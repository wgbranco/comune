<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    tools:context="williamgbranco.comune.activity.ReportListForInstitutionFragment"
    >

    <Button
        android:id="@+id/button_report_made_on"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@android:color/black"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texteview_report_made_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_report_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_gallery_image_light_gray"
                android:visibility="gone"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/imageview_report_footage"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_video_file_light_gray"
                android:visibility="gone"/>

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/imagebutton_report_responded"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <!-- <TextView
         android:id="@+id/textview_survey_remaining_time"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="16sp"
         android:textStyle="bold"/>

     <Space
         android:layout_width="match_parent"
         android:layout_height="10dp"/>

     <TextView
         android:id="@+id/textview_survey_description"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:maxLines="3"
         android:minLines="3"
         android:textColor="@android:color/black"/>-->
</LinearLayout>
